---
import { services } from "@/data/servicesData";
import CheckIcon from "@/assets/icons/check.svg";
import { Button } from "../ui";
---

<div class="max-w-7xl mx-auto px-4 py-8">
  {
    services.map((service) => (
      <div class="bg-surface flex max-md:flex-col mb-6 shadow-md rounded-lg ">
        <div class="text-surface-foreground p-6 max-md:w-full w-3/4">
          <h2 class="mb-4">{service.title}</h2>
          <p class="mb-4 text-surface-muted">{service.description}</p>
          <h3 class="mb-2">{service.details.title}</h3>
          <ul class="mb-4">
            {service.details.items.map((detail) => (
              <li class="ml-2">
                <CheckIcon class="inline-block mr-2 w-5 h-5 text-green-700" />
                {detail}
              </li>
            ))}
          </ul>
          <p>{service.note}</p>
        </div>
        <div class="flex items-center max-md:justify-center justify-end p-6">
          <img
            src="https://picsum.photos/300/300"
            alt={service.title}
            class="w-[300px] h-[300px] rounded-lg"
          />
        </div>
      </div>
    ))
  }
  <div
    class="bg-surface-dark text-surface-dark-foreground p-6 flex flex-col items-center justify-center rounded-lg shadow-md"
  >
    <h2 class="pb-4">Ready to get started?</h2>
    <p class="pb-4 text-surface-dark-muted">
      Contact us today for a free estimate or to schedule a service appointment.
      We look forward to powering your home or business!
    </p>
    <Button href="/contact" variant="primary" rounded="full"
      >Contact Us Today</Button
    >
  </div>
</div>
