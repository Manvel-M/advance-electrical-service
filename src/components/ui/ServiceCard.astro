---
type Props = {
  icon?: any;
  title: string;
  description: string;
};

const { icon: Icon, title, description } = Astro.props;
---

<div
  class="bg-surface text-surface-foreground p-6 rounded-lg shadow-md text-center hover:-translate-y-2 transition duration-300 cursor-pointer"
>
  <i class="flex justify-center"><Icon class="size-10 fill-primary" /></i>
  <h3 class="text-xl font-semibold mb-4 text-center mt-4">{title}</h3>
  <p class="text-base text-foreground-muted mb-6">
    {description}
  </p>
  <a href="#" class="text-primary hover:underline">Learn More</a>
</div>
