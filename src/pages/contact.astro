---
import { Layout } from "@/layouts";
import { Form } from "@/components/contact";
import { pageData } from "@/data/pageData";
---

<Layout
  title={pageData.contact.title}
  description={pageData.contact.description}
>
  <section class="max-w-7xl px-4 mx-auto py-8">
    <h1 class="text-center">Contact Us</h1>
    <p class="text-center text-foreground-muted mb-8">
      Have questions or need our services? Reach out to us!
    </p>
    <Form client:load />
    <form
      name="contact"
      data-netlify="true"
      netlify-honeypot="bot-field"
      hidden
    >
      <input type="hidden" name="form-name" value="contact" />
      <input type="text" name="firstName" />
      <input type="text" name="lastName" />
      <input type="tel" name="phone" />
      <input type="email" name="email" />
      <input type="text" name="serviceNeeded" />
      <textarea name="additionalInformation"></textarea>
    </form>
  </section>
</Layout>
