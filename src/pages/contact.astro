---
import { Layout } from "@/layouts";
import { Form } from "@/components/contact";
import { pageData } from "@/data/pageData";
---

<Layout
  title={pageData.contact.title}
  description={pageData.contact.description}
>
  <div
    class="relative w-full h-[500px] bg-[url('/contact.webp')] bg-no-repeat bg-top bg-cover text-surface-dark-foreground flex flex-col items-center justify-center"
  >
    <div class="absolute inset-0 bg-black/70 z-10 backdrop-blur-sm"></div>
    <h1 class="text-center mt-8 z-10">Contact Us</h1>
    <p class="text-center text-surface-dark-muted z-10">
      Have questions or need our services? Reach out to us!
    </p>
  </div>
  <section class="max-w-7xl px-4 mx-auto py-8">
    <Form client:load />
    <form
      name="contact"
      data-netlify="true"
      netlify-honeypot="bot-field"
      hidden
    >
      <input type="hidden" name="form-name" value="contact" />
      <input type="text" name="firstName" />
      <input type="text" name="lastName" />
      <input type="tel" name="phone" />
      <input type="email" name="email" />
      <input type="text" name="serviceNeeded" />
      <textarea name="additionalInformation"></textarea>
    </form>
  </section>
</Layout>
